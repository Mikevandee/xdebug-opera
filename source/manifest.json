{
  "manifest_version": 2,

  "name": "Xdebug helper",
  "description": "Helper for xdebug",
  "version": "1.0",
  "background": {
    "scripts": [
      "scripts/tab_helper.js",
      "scripts/cookie_helper.js",
      "scripts/xdebug.js",
      "scripts/background.js"
    ]
  },

  "permissions": [ "tabs", "cookies", "*://*/*" ],
  "browser_action": {
    "default_title": "Xdebug helper"
  },
  "commands": {
    "toggle_debug_action": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "windows": "Alt+Shift+X",
        "mac": "Alt+Shift+X"
      },
      "description": "Toggle between the debug states"
    }
  }
}